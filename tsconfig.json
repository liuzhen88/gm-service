{
  "include": ["src/**/*", "types/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "target": "es2017",
    "moduleResolution": "Node",
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
    },
    "esModuleInterop": true
  }
}